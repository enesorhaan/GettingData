@using GettingData.Models
@model Teacher
 
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<a asp-action="getstudentlist" asp-controller="student" style="text-align:right">Go to Student List</a>

<h2>Teacher Add Page</h2>

<form method="post" asp-action="addteacher" asp-controller="teacher">
    <div>
        <label asp-for="FirstName">First Name</label> <br />
        <input type="text" asp-for="FirstName"/>
    </div>
    <div>
        <label asp-for="LastName">Last Name</label> <br />
        <input type="text" asp-for="LastName"/>
    </div>
    <div>
        <label asp-for="BranchID">Branch</label> <br />
        <select asp-for="BranchID" asp-items="@(new SelectList(ViewBag.Branches,"ID","BranchName"))">
        </select>
    </div>
    <div>
        <button type="submit">Add Teacher</button>
    </div>
</form>