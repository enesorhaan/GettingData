@using GettingData.Models
@model (List<Branch> branches,Teacher teacher,Student student)
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Add Teacher Page Using Tuple</h2>

<form method="post" asp-action="addteacherusingtuple" asp-controller="teacher">
    <div>
        <label asp-for="teacher.FirstName">First Name</label> <br />
        <input type="text" asp-for="teacher.FirstName"/>
    </div>
    <div>
        <label asp-for="teacher.LastName">Last Name</label> <br />
        <input type="text" asp-for="teacher.LastName"/>
    </div>
    <div>
        <label asp-for="teacher.BranchID">Branch</label> <br />
        <select asp-for="teacher.BranchID" asp-items="@(new SelectList(Model.branches,"ID","BranchName"))">
        </select>
    </div>
    <div>
        <label asp-for="student.FirstName">Student Name</label> <br />
        <input type="text" asp-for="student.FirstName"/>
        <label asp-for="student.LastName">Student Surname</label> <br />
        <input type="text" asp-for="student.LastName" />
    <div>
        <button type="submit">Add Teacher</button>
    </div>
</form>